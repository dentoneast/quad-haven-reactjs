# Mobile Application Environment Variables
# Copy this file to .env and update with your values

# The ANDROID_HOME environment variable is used to specify the installation directory of the Android SDK.
ANDROID_HOME=C:\Software\android\sdk

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3001/api

# Google Maps API (for property location features)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Analytics
EXPO_PUBLIC_ANALYTICS_ID=your-analytics-id
EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Push Notifications
EXPO_PUBLIC_PUSH_NOTIFICATION_KEY=your-push-notification-key
EXPO_PUBLIC_FCM_SERVER_KEY=your-fcm-server-key

# Social Media Integration
EXPO_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_SOCIAL_LOGIN=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_CAMERA=true
EXPO_PUBLIC_ENABLE_LOCATION=true

# Development
EXPO_PUBLIC_DEBUG=false
EXPO_PUBLIC_LOG_LEVEL=info
EXPO_PUBLIC_DEV_MODE=false

# External Services
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
EXPO_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id

# App Configuration
EXPO_PUBLIC_APP_NAME=Homely Quad
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_DESCRIPTION=Find your perfect home with Homely Quad

# Contact Information
EXPO_PUBLIC_SUPPORT_EMAIL=support@homelyquad.com
EXPO_PUBLIC_CONTACT_PHONE=+1-555-0123

# Legal
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://homelyquad.com/privacy
EXPO_PUBLIC_TERMS_OF_SERVICE_URL=https://homelyquad.com/terms

# Platform Specific
EXPO_PUBLIC_IOS_BUNDLE_ID=com.homelyquad.mobile
EXPO_PUBLIC_ANDROID_PACKAGE=com.homelyquad.mobile

# Deep Linking
EXPO_PUBLIC_SCHEME=homely-quad
EXPO_PUBLIC_WEB_URL=https://homelyquad.com

# Storage
EXPO_PUBLIC_STORAGE_KEY=homely_quad_mobile
EXPO_PUBLIC_CACHE_DURATION=3600000

# Performance
EXPO_PUBLIC_IMAGE_QUALITY=0.8
EXPO_PUBLIC_MAX_IMAGE_SIZE=2048
EXPO_PUBLIC_CACHE_SIZE=100
