# Web Application Environment Variables
# Copy this file to .env.local and update with your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Google Maps API (for property location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Analytics
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Social Media Integration
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
NEXT_PUBLIC_TWITTER_HANDLE=your-twitter-handle

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# Development
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=info

# External Services
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id

# CDN and Assets
NEXT_PUBLIC_CDN_URL=https://cdn.homelyquad.com
NEXT_PUBLIC_ASSETS_URL=https://assets.homelyquad.com

# App Configuration
NEXT_PUBLIC_APP_NAME=Homely Quad
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Find your perfect home with Homely Quad

# Contact Information
NEXT_PUBLIC_SUPPORT_EMAIL=support@homelyquad.com
NEXT_PUBLIC_CONTACT_PHONE=+1-555-0123

# Legal
NEXT_PUBLIC_PRIVACY_POLICY_URL=https://homelyquad.com/privacy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=https://homelyquad.com/terms
