modules = ["nodejs-20", "bash", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
NODE_ENV = "development"
NEXT_PUBLIC_API_URL = "http://localhost:3001/api"
NEXT_PUBLIC_APP_NAME = "Homely Quad"
NEXT_PUBLIC_APP_VERSION = "1.0.0"
NEXT_PUBLIC_ENABLE_ANALYTICS = "false"
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN = "false"
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS = "false"
NEXT_PUBLIC_DEBUG = "true"
NEXT_PUBLIC_LOG_LEVEL = "info"
PORT = "3001"
LOG_LEVEL = "info"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "web"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "server"

[[workflows.workflow]]
name = "web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd homely-quad-next/packages/web && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd homely-quad-next/packages/server && npm run dev"
waitForPort = 3001

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd homely-quad-web/packages/web && npm run start"]
build = ["bash", "-c", "cd homely-quad-web/packages/web && npm run build"]
